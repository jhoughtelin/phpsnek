{
    "name": "battlesnake/php-snake",
    "description": "A high-performance Battlesnake implementation in PHP",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.10",
        "slim/psr7": "^1.5",
        "monolog/monolog": "^2.8",
        "php-di/php-di": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "BattleSnake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BattleSnake\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit"
    }
}
